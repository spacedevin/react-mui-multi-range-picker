{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "noEmit": false
  },
  "include": ["lib/**/*", "../../lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test-setup.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
